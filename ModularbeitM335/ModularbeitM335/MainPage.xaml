<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModularbeitM335.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Modul 335" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Spiele Datenbank" FontSize="Title" Padding="30,10,30,10"/>
        <Label FontSize="16" Padding="30,24,30,0">

        </Label>
        <Label>Gib den Namen des Spieles an</Label>
        <Entry x:Name="gamename" Placeholder="Name" >
        </Entry>
        <Label>Gib den Namen des Entwicklers an</Label>

        <Entry x:Name="devname" Placeholder="Entwickler" >
        </Entry>
        <Label>Gib das Veröffentlichkeitsdatum des spieles an</Label>

        <DatePicker x:Name="DOB"></DatePicker>
        <StackLayout Orientation="Horizontal">
            <Button Text="submit" Clicked="submit"></Button>
        </StackLayout>
        
        

    </StackLayout>

</ContentPage>
